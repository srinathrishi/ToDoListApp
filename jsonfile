---
apiVersion: constraints.gatekeeper.sh/v1beta1
kind: K8sRequiredLabel
metadata:
  name: require-testlabel
spec:
  match:
    kinds:
      - apiGroups: [""]
        kinds: ["*"]
    namespaces:
      - compute-namespace
  parameters:
    labels:
      - key: testlabel
        values:
          - ""
---
apiVersion: constraints.gatekeeper.sh/v1beta1
kind: K8sRequiredResources
metadata:
  name: require-resource-limits
spec:
  match:
    kinds:
      - apiGroups: [""]
        kinds: ["Deployment", "StatefulSet", "DaemonSet", "Job", "CronJob"]
    namespaces:
      - compute-namespace
  parameters:
    cpuRequests: true
    cpuLimits: true
    memoryRequests: true
    memoryLimits: true
